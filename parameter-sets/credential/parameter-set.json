{
    "meta" : {
        "label": "Credentials",
        "description": "",
        "icon": "icon-rocket"
    },
    "defaultDefinableInline": true,
    "defaultDefinableAtProjectLevel": true,

    "pluginParams": [
    ],

    "params": [
        {
            "name": "login_type",
            "label": "Login type",
            "type": "SELECT",
            "defaultValue": "bearer_token",
            "selectChoices": [
                {
                    "value": "no_auth",
                    "label": "No auth"
                },
                {
                    "value": "basic_login",
                    "label": "Basic auth"
                },
                {
                    "value": "api_key",
                    "label": "API key"
                },
                {
                    "value": "bearer_token",
                    "label": "Bearer token"
                }
            ]
        },
        {
            "name": "token",
            "label": "Token",
            "description": "Can be reused as {{token}}",
            "type": "PASSWORD",
            "visibilityCondition": "model.login_type == 'bearer_token'"
        }
    ]
}
