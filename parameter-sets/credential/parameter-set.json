{
    "meta" : {
        "label": "Credentials",
        "description": "",
        "icon": "icon-rocket"
    },
    "defaultDefinableInline": true,
    "defaultDefinableAtProjectLevel": true,

    "pluginParams": [
    ],

    "params": [
        {
            "name": "separator",
            "label": "Warning",
            "description": "Anyone with read permission to this credential can obtain its stored passwords / keys by calling an untrusted API endpoint",
            "type": "SEPARATOR"
        },
        {
            "name": "login_type",
            "label": "Login type",
            "type": "SELECT",
            "defaultValue": "no_auth",
            "selectChoices": [
                {
                    "value": "no_auth",
                    "label": "No auth"
                },
                {
                    "value": "basic_login",
                    "label": "Basic auth"
                },
                {
                    "value": "api_key",
                    "label": "API key"
                },
                {
                    "value": "bearer_token",
                    "label": "Bearer token"
                }
            ]
        },
        {
            "name": "username",
            "label": "User name",
            "description": "Can be reused as {{username}}",
            "type": "STRING",
            "visibilityCondition": "model.login_type == 'basic_login'"
        },
        {
            "name": "password",
            "label": "Password",
            "description": "Can be reused as {{password}}",
            "type": "PASSWORD",
            "visibilityCondition": "model.login_type == 'basic_login'"
        },
        {
            "name": "token",
            "label": "Token",
            "description": "Can be reused as {{token}}",
            "type": "PASSWORD",
            "visibilityCondition": "model.login_type == 'bearer_token'"
        },
        {
            "name": "api_key_name",
            "label": "Key",
            "description": "",
            "type": "STRING",
            "visibilityCondition": "model.login_type == 'api_key'"
        },
        {
            "name": "api_key_value",
            "label": "Value",
            "description": "",
            "type": "PASSWORD",
            "visibilityCondition": "model.login_type == 'api_key'"
        },
        {
            "name": "api_key_destination",
            "label": "Add to",
            "description": "",
            "type": "SELECT",
            "defaultValue": "header",
            "selectChoices": [
                {
                    "value": "header",
                    "label": "Header"
                },
                {
                    "value": "params",
                    "label": "Query params"
                }
            ],
            "visibilityCondition": "model.login_type == 'api_key'"
        },
        {
            "name": "bearer_template",
            "label": "Header prefix",
            "description": "",
            "type": "STRING",
            "defaultValue": "Bearer {{token}}",
            "visibilityCondition": "model.login_type == 'bearer_token'"
        },
        {
            "name": "domain",
            "label": "Top level domain name",
            "description": "For security, lock these credentials to https + tld",
            "defaultValue": "",
            "visibilityCondition": false,
            "type": "STRING"
        },
        {
            "name": "user_defined_keys",
            "label": "User key/values",
            "description": "User defined keys/values that can be used later in url, query string...",
            "type": "KEY_VALUE_LIST"
        }
    ]
}
